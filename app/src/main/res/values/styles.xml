<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- MainActivity theme. -->
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/shape_main_evening_background</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <!-- MainActivity's ActionBar theme. -->
    <style name="ActionBarTheme" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
    </style>


</resources>
